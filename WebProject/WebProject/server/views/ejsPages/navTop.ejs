<!--this ejs file is for navigation bar -->
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="Content/main.css">

  <nav class="navbar d-grid gap-3">
  <div class="container-fluid">

    <!--this button reponses when the web page is responsive, looks like a ham burger-->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon">
      </span>
    </button>
    

    <!--mx(margin on axis)-->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mx-auto" > 

        <!--this prints out Back on the website + the (/)(/home)(/about)(/project)(/contact) is the hyperlink where the site is located-->
        <!--we use ejs, when using the if else statements(if to activate and else to deactive the navBar options)-->
        <li class="nav-item">
        <% if (title == "Home") 
        { %>
          <a class="nav-link active" href="/home">
        <% } 
        else { %>
          <a class="nav-link" href="/home">
        <% } %>
          <i class="fa-sharp fa-solid fa-house"></i> Home</a>
        </li>


        <li class="nav-item">
        <% if (title == "About Me") 
        { %>
          <a class="nav-link active" href="/about">
        <% } 
        else { %>
          <a class="nav-link" href="/about">
        <% } %>
          <i class="fa-regular fa-circle-user"></i> Shows</a>
        </li>        

        
    </div>
  </div>
</nav>

</head>
</html>