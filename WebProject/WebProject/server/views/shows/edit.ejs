<%- include ../ejsPages/header.ejs %>
<%- include ../ejsPages/navTop.ejs %>

<div class="container">
    <div class="row">
    <div class= "col-md-offset-3 col-md-6">
    <h1><%= title %></h1>
    <form class="form" method="post">

    <div class="form-group">
    <label for="nameTextField"> Show Title</label>
    <input type="text" class="form-control"
    id="nametextField"
    placeholder="Enter the Show title"
    name="name" value="<%= shows.name %>"required>
</div>


    <div class="form-group">
    <label for="createdByTextField"> CreatedBy</label>
    <input type="text" class="form-control"
    id="createBytextField"
    placeholder="Created by:"
    name="createBy"value="<%= shows.createdBy %>" required>
</div>

    <div class="form-group">
    <label for="addressTextField"> Show Address</label>
    <input type="text" class="form-control"
    id="addresstextField"
    placeholder="Enter the Address"
    name="address"value="<%= shows.address %>" required>
</div>

    <div class="form-group">
    <label for="genreTextField"> Show Genre</label>
    <input type="text" class="form-control"
    id="genretextField"
    placeholder="Enter the Genre"
    name="genre"value="<%= shows.genre %>" required>
</div>

    <div class="form-group">
    <label for="rateTextField"> Rating</label>
    <input type="number" class="form-control"
    id="ratetextField"
    placeholder="Enter the Rating"
    name="rate"value="<%= shows.rate %>" required>
</div>

<button class="btn-btn-primary" type="submit">
    <i class="fas fa-edit"></i> submit
</button>

<a href="/showslist" class="btn btn-warning">
<i class="fas fa-undo"></i>Cancel</a>
</form>
</div>
</div>
</div>

<%- include ../ejsPages/navBottom.ejs %>
<%- include ../ejsPages/footer.ejs %>