<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="Content/main.css">

<!-- prints the code from ejsPages/header file(code has to be in ejs form)-->
<%- include ../ejsPages/header.ejs %>
<%- include ../ejsPages/navTop.ejs %>

<body>
<!-- Prints on the main pages and text-muted makes the text fade -->
<main>
  <div class="container">
    <div class="row">
    <div class = "col-md-offset-3 col-md-9">
    <h1><%= title %></h1>
    <a href="/showslist/add" class="btn btn-primary" role="button">
      <i class="fas fa-plus-circle"></i> Add a Shows
      </a>
      <br>
    <br>
    <table class = "table table-bordered table-stripped table-hover">
    <tr>
    <th class="text-center col-3">Name</th>
    <th class="text-center col-3">CreatedBy</th>
    <th class="text-center col-3">Address</th>
    <th class="text-center col-3">Genre</th>
    <th class="text-center col-2">Rating</th>
    <th class="text-center col-3"></th>
    <th class="text-center col-3"></th>

    </tr>
    <% for(let count=0; count<Showslist.length; count++) { %>
        <tr>
        <td class="text-center col-3"><%= Showslist[count].name %></td>
        <td class="text-center col-3"><%= Showslist[count].createdBy %></td>
        <td class="text-center col-3"><%= Showslist[count].address %></td>
        <td class="text-center col-3"><%= Showslist[count].genre %></td>
        <td class="text-center col-2"><%= Showslist[count].rating %></td>
        <td class="text-center col-2">
          <a href="/shows/edit/<%= Showslist[count].rating %></td>"
            class="btn btn-primary"
            <i class="fas fa-pencil-alt"></i> Edit </a>
          </td>
        <td class="text-center col-2"><%= Showslist[count]._id %></td>

        <td class="text-center col-2">
          <a href="/showslist/delete/<%= Showslist[count].rating %></td>"
            class="btn btn-danger"
            <i class="fas fa-trash-alt"></i> Delete </a>
          </td>
    <% } %>


    </table>


    </div>
</main>
<!-- prints the code from ejsPages/navBottom file(code has to be in ejs form)-->
<%- include ../ejsPages/navBottom.ejs %>
<%- include ../ejsPages/footer.ejs %>

<!-- <%- include ejsPages/links.ejs %> -->

</html>
</head>